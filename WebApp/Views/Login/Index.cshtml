@{
	 ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Přihlášení do restaurace u bořka</h1>

     <form class="form-check-inline flex-wrap ">
        <div class="input-group flex-wrap">
         <label for="uname"><b>E-mail:   </b></label>
        <input  class="form-control" type="email" placeholder="Zadejte e-mail" name="uname" required><br />
        </div>
    <div class="input-group flex-wrap">        
        <label class="form-label"  for="psw"><b>Heslo:   </b></label>
        <input class="form-control" type="password" placeholder="Zadejte heslo" name="psw" required>
    </div>

        <a href="/Login/Register">Nemáš účet? Registruj se</a>
        
        <button class="btn btn-primary" type="submit">Login</button>
    </form>

</div>
    
 

